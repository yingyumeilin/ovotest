<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_gridview_item_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#F3F3F3"
    tools:context=".MainActivity" >

    <TextView 
        android:id="@+id/main_gridview_item_layout_text_num"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:visibility="gone"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/main_gridview_item_layout_img"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/main_gridview_item_layout_text_num"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView 
        android:id="@+id/main_gridview_item_layout_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:gravity="right"
        />
</RelativeLayout>
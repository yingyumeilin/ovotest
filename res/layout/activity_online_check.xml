<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/check_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w_25"
                        android:src="@drawable/check_blue_line" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/check_2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w_25"
                        android:src="@drawable/check_blue_line" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/check_3" />

                    <ImageView
                        android:id="@+id/iv_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w_25"
                        android:src="@drawable/check_hui_line" />

                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/check_4_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/w_270"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/check_kuang" >

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="信息提交成功"
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="请您耐心等待申请受理！           "
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@+id/tv_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tv_1"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/dark_gary"
                            android:textSize="@dimen/size_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/w_270"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/check_kuang" >

                        <TextView
                            android:id="@+id/tv_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="申请已受理"
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@+id/tv_22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_12"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="申请受理中，请您耐心等待！            "
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@+id/tv_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tv_12"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/dark_gary"
                            android:textSize="@dimen/size_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/w_270"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/check_kuang" >

                        <TextView
                            android:id="@+id/tv_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:text="审核中‥"
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@+id/tv_23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_13"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            android:text="审核过程中，工作人员会在2个工作日内给您答复"
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@+id/tv_time_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tv_13"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/dark_gary"
                            android:textSize="@dimen/size_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/w_270"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/check_kuang" >

                        <TextView
                            android:id="@+id/tv_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="开通成功！"
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@+id/tv_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_14"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="恭喜您，在线收银台开通成功！"
                            android:textColor="@color/content_color_black"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@+id/tv_time_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tv_14"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/dark_gary"
                            android:textSize="@dimen/size_12" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/loginshape"
                android:clickable="true"
                android:gravity="center"
                android:onClick="send_onClick"
                android:text="完 成"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/submitno"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/jujue"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="完 成"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
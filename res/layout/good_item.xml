<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECEFEF"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
        android:background="@drawable/up_down_border"
        	android:baselineAligned="false"
            android:orientation="horizontal" >
			
            <ImageView
                android:id="@+id/icon"
                android:layout_width="74dp"
                android:layout_height="56dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:background="@drawable/show_white_box_border"
                 />

            <LinearLayout
                android:id="@+id/last_order"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical" >


                <RelativeLayout
                    android:id="@+id/last_order_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/name"
                        style="@style/content_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/content_color_black"
                        android:textSize="18sp" />

                     <!-- <TextView
                         android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:background="@drawable/share"
                         /> 
 -->
 <TextView
                        android:id="@+id/recommend"
                        style="@style/content_font"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_width="45dp"
                        android:layout_height="28dp"
                        android:text="推荐"
                        android:background="@drawable/orangeshape"
                         />
                    <TextView
                        android:id="@+id/status"
                        style="@style/content_font"
                        android:text="下架"
                        android:layout_toLeftOf="@id/recommend"
                        android:layout_marginRight="10dp"
                        android:layout_width="45dp"
                        android:layout_height="28dp"
                        android:textColor="@color/white"
                        android:background="@drawable/grayshape"
                         />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/price"
                        android:textSize="16sp"
                        style="@style/content_font_gray"
                        android:textColor="@color/content_color_red"
                        android:text="" />

                    <TextView
                        android:id="@+id/yuan"
                        android:textSize="14sp"
                        style="@style/content_font_gray"
                        android:layout_toRightOf="@id/price"
                        android:textColor="@color/content_color_black"
                        android:text="元" />

                    
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:gravity="center_horizontal|left"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/yuexiao"
                        style="@style/content_font_gray"
                        android:text="销量:" />

                    <TextView
                        android:id="@+id/sale_num"
                        style="@style/content_font_gray"
                        android:layout_toRightOf="@id/yuexiao"
                        android:textColor="#2F5B90"
                        android:text="20" />
                    <TextView
                        android:id="@+id/danwei"
                        style="@style/content_font_gray"
                        android:layout_toRightOf="@id/sale_num"
                        android:text="箱"
                        android:visibility="gone"
                         />

                    <TextView
                        android:id="@+id/kucun"
                        style="@style/content_font_gray"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/danwei"
                        android:text="库存:"
                         />
                    <TextView
                        android:id="@+id/kucun_num"
                        style="@style/content_font_gray"
                        android:textColor="#2F5B90"
                        android:layout_toRightOf="@id/kucun"
                        android:text="12"
                         />
                    <TextView
                        android:id="@+id/danwei2"
                        style="@style/content_font_gray"
                        android:layout_toRightOf="@id/kucun_num"
                        android:visibility="gone"
                        android:text="箱"
                         />
                    <TextView
                        android:id="@+id/shangjia"
                        style="@style/content_font_gray"
                        android:layout_toLeftOf="@id/putaway_time"
                        android:text="上架"
                         />
                    <TextView
                        android:id="@+id/putaway_time"
                        style="@style/content_font_gray"
                         android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:text="12-12"
                         />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hint_price_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b0000000"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hint_login_dialog_bg" >

        <RelativeLayout
            android:id="@+id/tj"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginTop="10dip" >

            <EditText
                android:id="@+id/send_the_price_editText"
                style="@style/price_edittext_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:digits="0123456789"
                android:ems="10"
                android:textColor="@color/content_color_black" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/tj"
            android:gravity="center" >

            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="#00C1FF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/cancelbtn"
                android:background="@null"
                android:text="@string/btn_confirm"
                android:textColor="#00C1FF"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
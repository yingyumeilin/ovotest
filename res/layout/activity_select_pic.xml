<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:onClick="back_onClick"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="take_photo_onClick"
            android:text="拍 照"
            android:textColor="@color/content_color_black"
            android:textSize="18sp"
            android:background="@drawable/show_gray_box_white_border"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="pick_photo_onClick"
            android:text="从手机相册中选择"
            android:background="@drawable/show_gray_box_white_border"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/content_color_black"
            android:textStyle="bold" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:background="@drawable/grayshape"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:onClick="back_onClick"
            android:text="取 消"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
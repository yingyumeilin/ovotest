<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_main" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/w_5"
        android:background="@drawable/up_down_border"
        android:padding="@dimen/w_10" >

        <RelativeLayout
            android:id="@+id/rl_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_15"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quan_tu" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_already_verified"
            android:layout_alignBottom="@+id/tv_already_verified"
            android:layout_marginLeft="@dimen/w_5"
            android:text="验证码"
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/iv_store_pay_not_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/store_pay_not_verified"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_already_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:text="已验证"
            android:textColor="@color/pay_green"
            android:textSize="@dimen/size_12"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="12dp"
            android:src="@color/line_color" />

        <TextView
            android:id="@+id/title_goodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="订单编号:"
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/title_goodname"
            android:text=""
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_goodname"
            android:layout_below="@+id/title_goodname"
            android:layout_marginTop="5dp"
            android:text="订单时间:"
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_goodname"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/order_time"
            android:text=""
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/title_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_time"
            android:layout_below="@+id/order_time"
            android:layout_marginTop="5dp"
            android:text="金额:"
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title_address"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/title_address"
            android:textColor="@color/content_color_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_already_verified"
            android:layout_alignBottom="@+id/tv_already_verified"
            android:layout_alignLeft="@+id/order_num"
            android:text=""
            android:textColor="@color/red"
            android:textSize="@dimen/size_14" />
    </RelativeLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading_back"
    tools:context=".LoadingActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/w_520"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/open_shop"
                android:layout_width="141dp"
                android:layout_height="47dp"
                android:background="@drawable/show_red_box_white_border"
                android:clickable="true"
                android:gravity="center"
                android:onClick="open_shop"
                android:text="我要开店"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/renlin_shop"
                android:layout_width="141dp"
                android:layout_height="47dp"
                android:background="@drawable/show_blue_box_white_border"
                android:clickable="true"
                android:gravity="center"
                android:onClick="login_onClick"
                android:text="登录店铺"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
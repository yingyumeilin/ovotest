<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="50dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/new_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_10"
            android:gravity="center_horizontal"
            android:text="请绘制新手势密码"
            android:textColor="#E5A600"
            android:textSize="@dimen/size_16" />

        <com.example.oto01.gesture.LockPatternView
            android:id="@+id/new_gesturepwd_create"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/w_20"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dip" >

        <Button
            android:id="@+id/new_gesturepwd_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_styles"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/gesture_Redraw"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/new_gesturepwd_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_styles"
            android:gravity="center"
            android:text="@string/gesture_save"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>